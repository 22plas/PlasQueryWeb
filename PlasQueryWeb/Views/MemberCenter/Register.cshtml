
@{ViewBag.Title = "用户注册"; }
<div class="header-white" style="padding: 20px 50px;height: auto;">
    <div class="logo">
        <a href="/"><img src="/Content/img/logo.png" width="88" alt=""></a>
    </div>
    <div>
        <span style="display: inline-block; font-size: 18px;position: absolute;top: 55px;right: 30px;">您可信赖的全球原料和配料搜索引擎</span>
    </div>
</div>
<div class="login-bg" style="height: auto;text-align: center;">
    <div style="display: inline-block;width: 400px; background-color: rgba(255,255,255,.8);padding: 10px 0;margin: 60px 0;">
        <div class="login-box" style="margin: 0;">
            <p class="login-title">帐号注册</p>
            <div class="row">
                <span class="title"><span class="text-red">*</span>登录帐号：</span><input type="text" class="register-input" style="text-align: left;" placeholder="请输入帐号">
            </div>
            <div class="row">
                <span class="title"><span class="text-red">*</span>登录密码：</span><input type="password" class="register-input" style="text-align: left;" placeholder="请输入登录密码">
            </div>
            <div class="row">
                <span class="title"><span class="text-red">*</span>确认密码：</span><input type="password" class="register-input" style="text-align: left;" placeholder="请输入确认密码">
            </div>
            <div class="row">
                <span class="title"><span class="text-red">*</span>手机号码：</span>
                <div style="display: flex;border: 1px solid #ddd;">
                    <input type="text" class="register-input" style="border: none;" placeholder="请输入手机号码">
                    <span class="code">获取验证码</span>
                </div>
            </div>
            <div class="row">
                <span class="title"><span class="text-red">*</span>验证码：</span><input type="text" class="register-input" style="text-align: left;" placeholder="请输入手机验证码">
            </div>
            <div class="row">
                <button class="search-btn-screem">立即注册</button>
            </div>
            <div style="text-align: right;font-size: 14px;">
                已有帐号？前往<a href="/MemberCenter/Login" style="color: #0093dd;">登录</a>
            </div>
        </div>
    </div>
</div>